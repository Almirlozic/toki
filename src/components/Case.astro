---
// src/components/Case.astro
const { data } = Astro.props;
---




<a href={`/case/${data.id}`}>
    <article class="card">
      <div class="img-wrap">
        <img src={`https://obflgqfgayjayvdomvln.supabase.co/storage/v1/object/public/images/${data.image}`} alt={data.title ?? data.image} />
      </div>
    
      <div class="meta">
        <h2>{data.title}</h2>
        <p>{data.info}</p>
      </div>
    </article>
</a>


<style>
.card {
  display: flex;
  flex-direction: column;
  gap: 12px;
  background: transparent;
  border-radius: 12px;
  padding: 0;
}


.img-wrap {
  background-color: #FBF3DE;
  padding: 12px;
  border-radius: 12px;
  height: 250px;              
  display: flex;
  align-items: center;         
  justify-content: center;     
  overflow: hidden;           
}

.img-wrap img {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;        
  display: block;
}



.meta{
    margin: 0px 5px;
}
.meta h2 {
  color: #DEB959;
  margin: 0;
  font-size: 1.05rem;
}

.meta p {
  margin: 6px 0 0 0;
  color: #DEB959;
  font-size: 0.9rem;
}
a{
    text-decoration: none;
}
</style>
