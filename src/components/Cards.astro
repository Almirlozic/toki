<style>
  .cards-section {
    padding: 3rem 0;
    display: flex;
    justify-content: center;
  }

  .cards {
    display: flex;
    gap: 1rem;
    position: relative;
  }

  .card {
    width: 220px;
    height: 340px;
    background: url("/images/paper-texture.jpg"), #b99b78;
    background-size: cover;
    background-blend-mode: multiply;
    border-radius: 16px;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
    color: white;
    font-size: 1.3rem;
    font-weight: 600;
    cursor: pointer;
    position: relative;

    margin-left: -30px;
    transition: transform 0.2s ease;
  }

  .card:first-child {
    margin-left: 0;
  }

  .card-number {
    font-family: "Comic Sans MS", "Marker Felt", sans-serif;
    font-size: 2rem;
    border: 2px solid white;
    width: 42px;
    height: 42px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 1rem;
  }

  .card:nth-child(1) {
    transform: rotate(-6deg);
  }
  .card:nth-child(2) {
    transform: rotate(-2deg);
  }
  .card:nth-child(3) {
    transform: rotate(1deg);
  }
  .card:nth-child(4) {
    transform: rotate(3deg);
  }
  .card:nth-child(5) {
    transform: rotate(5deg);
  }

  .card:hover {
    transform: scale(1.05) rotate(0deg);
    z-index: 10;
  }

  /* css til kortene når de klikkes på */
  /* ===== MODAL OVERLAY ===== */
  .modal {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.65);
    display: flex;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(3px);
    z-index: 1000;
  }

  .modal.hidden {
    display: none;
  }

  /* ===== MODAL CARD ===== */
  .modal-content {
    background: url("/images/paper-texture.jpg"), #b99b78;
    background-size: cover;
    background-blend-mode: multiply;
    width: 90%;
    max-width: 600px;
    padding: 2.5rem;
    border-radius: 20px;
    color: white;
    font-size: 1rem;
    line-height: 1.5;
    position: relative;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.35);
  }

  /* ===== CLOSE BUTTON ===== */
  .close-btn {
    position: absolute;
    top: 18px;
    right: 18px;
    background: none;
    border: none;
    font-size: 1.8rem;
    color: white;
    cursor: pointer;
  }

  /* ===== Modal typography ===== */

  .modal-content h2 {
    font-size: 1.8rem;
    margin-top: 0.5rem;
    margin-bottom: 1.5rem;
    font-weight: 700;
  }

  .modal-content h3 {
    margin-top: 1.5rem;
    font-weight: 700;
    font-size: 1.1rem;
  }

  .modal-content ul {
    margin: 0.7rem 0 0 1rem;
    padding: 0;
  }

  .modal-content ul li {
    margin-bottom: 0.4rem;
  }

  /* Håndskrevet ’circle number’ i modal */
  #modal-inner .card-number-circle {
    font-family: "Comic Sans MS", "Marker Felt", sans-serif;
    font-size: 2.3rem;
    border: 2px solid white;
    width: 46px;
    height: 46px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 1rem;
  }

  /* css til pap bagrunden */
  .card,
  .modal-content {
    background: url("/pap.jpg");
    background-size: cover;
    background-blend-mode: multiply;
  }
</style>
