---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main class="contact-section">
    <h1>let’s get in touch!</h1>

    <div class="contact-wrapper">
      <form class="contact-form">
        <label for="name">full Name</label>
        <input id="name" type="text" name="name" />

        <label for="email">e-mail</label>
        <input id="email" type="email" name="email" />

        <label for="message">message</label>
        <textarea id="message" name="message" rows="3"></textarea>

        <button type="submit">Let’s do this!</button>
      </form>

      <div class="contact-info">
        <div>
          <h3>Contact</h3>
          <p><a href="mailto:hello@toki.house">hello@toki.house</a></p>
        </div>

        <div>
          <h3>Based in</h3>
          <p>
            <a
              href="https://maps.google.com/?q=Guldbergsgade+29N,+2200+København"
              target="_blank"
            >
              Guldbergsgade 29N, 2200 København
            </a>
          </p>
        </div>
      </div>
    </div>

    <div class="wave">
      <svg
        viewBox="0 0 1440 320"
        xmlns="http://www.w3.org/2000/svg"
        preserveAspectRatio="none"
      >
        <path
          fill="#f6e8cc"
          d="M0,224L80,197.3C160,171,320,117,480,117.3C640,117,800,171,960,176C1120,181,1280,139,1360,117.3L1440,96V320H0Z"
        ></path>
      </svg>
    </div>
  </main>
</Layout>

<style>
  .contact-section {
    position: relative;
    min-height: 100vh;
    padding: 3rem 2rem 8rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    background-color: #22372f;
    overflow: hidden;
  }

  h1 {
    font-size: 3rem;
    font-weight: 700;
    text-align: center;
    margin-top: -1rem;
    margin-bottom: 5rem;
    color: #e9c56a;
  }

  .contact-wrapper {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 9rem;
    max-width: 800px;
    width: 100%;
    background-color: #22372f;
    color: #e9c56a;
  }

  .contact-form {
    flex: 1 1 300px;
    display: flex;
    flex-direction: column;
    gap: 1.4rem;
    max-width: 350px;
  }

  .contact-form label {
    font-weight: 600;
    text-transform: lowercase;
    font-size: 1rem;
  }

  .contact-form input,
  .contact-form textarea {
    background: transparent;
    border: none;
    border-bottom: 2px solid #e9c56a;
    color: #e9c56a;
    padding: 0.5rem 0;
    font-size: 1.5rem;
    outline: none;
  }

  .contact-form textarea {
    resize: none;
  }

  .contact-form button {
    margin-top: 1rem;
    background-color: #e9c56a;
    color: #23372e;
    font-weight: 600;
    border: none;
    border-radius: 999px;
    padding: 0.8rem 2rem;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .contact-form button:hover {
    background-color: #c19742;
  }

  .contact-info {
    flex: 1 1 200px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    gap: 3rem;
    font-size: 0.95rem;
  }

  .contact-info h3 {
    margin-bottom: 0.4rem;
    font-weight: 800;
    text-transform: capitalize;
  }

  .contact-info a {
    color: #e9c56a;
    text-decoration: underline;
  }

  .wave {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 160px;
    overflow: hidden;
  }

  .wave svg {
    width: 100%;
    height: 100%;
    display: block;
  }

  @media (max-width: 768px) {
    nav {
      display: none;
      position: absolute;
      top: 145px;
      right: 0;
      background: #23312b;
      flex-direction: column;
      gap: 1rem;
      padding: 1.5rem 2rem;
      border-top: 1px solid #d9b45e;
      transition: all 0.3s ease;
    }

    nav.open {
      display: flex;
    }

    .burger {
      display: flex;
    }
    .logo img {
      width: 100px;
      height: auto;
    }

    .toki-content p {
      font-size: 1.2rem;
      line-height: 1.6;
      margin-bottom: 1.5rem;
    }
  }
</style>
